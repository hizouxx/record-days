/* miniprogram/pages/setting/setting.wxss */

.bg-item{
  width: 150rpx;
  height: 300rpx;
  position: relative;
}

.bg-item image{
  position: absolute;
  top: 50%;
  left: 50%;
  height: 100%;
  width: 100%;
  transform: translate(-50%, -50%);
}

.bg-item-check{
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 0 0 12rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
}
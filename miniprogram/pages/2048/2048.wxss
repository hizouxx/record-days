/* pages/2048/2048.wxss */
.container {
  color: #776e65;
  background-color: #faf8ee;
  position: relative;
} 

.score{
  background: #e0d3c7;
}

.game {
  margin: 30rpx auto;
  padding-top: 4vw; 
  padding-left: 1vw;
  background: #bbada0;
  border-radius: 12rpx;
  width: 92vw;
  height: 92vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;/* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;/* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}
.cell {
  width: 19vw;
  height: 19vw; 
  margin-left: 3vw;
  margin-bottom: 3vw;
  float: left;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: rgba(238, 228, 218, 0.35);
  overflow: hidden;
}
.cell-con { 
  width: 19vw;
  height: 19vw; 
  line-height: 19vw;
  position: absolute;
  font-size: 70rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 10rpx;
}  
.cell-con-2 { background: #eee4da; }
.cell-con-4 { background: #ede0c8; }
.cell-con-8 {
  color: #f9f6f2;
  background: #f2b179;
}
.cell-con-16 {
  color: #f9f6f2;
  background: #f59563;
}
.cell-con-32 {
  color: #f9f6f2;
  background: #f67c5f;
}
.cell-con-64 {
  color: #f9f6f2;
  background: #f65e3b;
}
.cell-con-128 {
  color: #f9f6f2;
  background: #edcf72;
  font-size: 60rpx;
}
.cell-con-256 {
  color: #f9f6f2;
  font-size: 60rpx;
  background: #edcc61;
}
.cell-con-512 {
  color: #f9f6f2;
  font-size: 60rpx;
  background: #edc850;
}
.cell-con-1024 {
  color: #f9f6f2;
  font-size: 50rpx;
  background: #edc53f;
}
.cell-con-2048 {
  color: #f9f6f2;
  font-size: 50rpx;
  background: #edc22e;
}  
.game-over {
  position: absolute;
  z-index: 9;
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 50%;
  box-sizing: border-box;
} 
.game-over text {
  display: block;
}
.nowScore {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.pro {
  font-weight: bold;
  font-size: 60rpx;
} 
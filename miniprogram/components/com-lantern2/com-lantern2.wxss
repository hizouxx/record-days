/* components/com-lantern2/com-lantern2.wxss */
.deng-box {
	position: fixed;
	top: 0;
	left: 100rpx;
	z-index: 999;
}
.deng-box1 {
	position: fixed;
	top: 0;
	left: 20rpx;
	z-index: 999;
}
 
.deng-box2 {
	position: fixed;
	top: 0;
	right: 100rpx;
	z-index: 999;
}
.deng-box3 {
	position: fixed;
	top: 0;
	right: 20rpx;
	z-index: 999;
}
.deng-box3 .deng,
.deng-box1 .deng {
	position: relative;
	width: 120rpx;
	height: 90rpx;
	margin: 50rpx;
	background: #d8000f;
	background: rgba(216, 0, 15, 0.8);
	border-radius: 50% 50%;
	transform-origin: 50% -100rpx;
	animation: swing 5s infinite ease-in-out;
	box-shadow: -5rpx 5rpx 30rpx 4rpx rgba(252, 144, 61, 1);
}
 
.deng {
	position: relative;
	width: 120rpx;
	height: 90rpx;
	margin: 50rpx;
	background: #d8000f;
	background: rgba(216, 0, 15, 0.8);
	border-radius: 50% 50%;
	transform-origin: 50% -100rpx;
	animation: swing 3s infinite ease-in-out;
	box-shadow: -5rpx 5rpx 50rpx 4rpx rgba(250, 108, 0, 1);
}
 
.deng-a {
	width: 100rpx;
	height: 90rpx;
	background: #d8000f;
	background: rgba(216, 0, 15, 0.1);
	margin: 12rpx 8rpx 8rpx 8rpx;
	border-radius: 50% 50%;
	border: 2rpx solid #dc8f03;
}
 
.deng-b {
	width: 45rpx;
	height: 90rpx;
	background: #d8000f;
	background: rgba(216, 0, 15, 0.1);
	margin: -4rpx 8rpx 8rpx 26rpx;
	border-radius: 50% 50%;
	border: 2rpx solid #dc8f03;
}
 
.xian {
	position: absolute;
	top: -100rpx;
	left: 60rpx;
	width: 2rpx;
	height: 100rpx;
	background: #dc8f03;
}
 
.shui-a {
	position: relative;
	width: 5rpx;
	height: 20rpx;
	margin: -5rpx 0 0 59rpx;
	animation: swing 4s infinite ease-in-out;
	transform-origin: 50% -45rpx;
	background: #ffa500;
	border-radius: 0 0 5rpx 5rpx;
}
 
.shui-b {
	position: absolute;
	top: 14rpx;
	left: -2rpx;
	width: 10rpx;
	height: 10rpx;
	background: #dc8f03;
	border-radius: 50%;
}
 
.shui-c {
	position: absolute;
	top: 18rpx;
	left: -2rpx;
	width: 10rpx;
	height: 35rpx;
	background: #ffa500;
	border-radius: 0 0 0 5rpx;
}
 
.deng:before {
	position: absolute;
	top: -7rpx;
	left: 29rpx;
	height: 12rpx;
	width: 60rpx;
	content: " ";
	display: block;
	z-index: 999;
	border-radius: 5rpx 5rpx 0 0;
	border: solid 1rpx #dc8f03;
	background: #ffa500;
	background: linear-gradient(to right, #dc8f03, #ffa500, #dc8f03, #ffa500, #dc8f03);
}
 
.deng:after {
	position: absolute;
	bottom: -7rpx;
	left: 10rpx;
	height: 12rpx;
	width: 60rpx;
	content: " ";
	display: block;
	margin-left: 20rpx;
	border-radius: 0 0 5rpx 5rpx;
	border: solid 1rpx #dc8f03;
	background: #ffa500;
	background: linear-gradient(to right, #dc8f03, #ffa500, #dc8f03, #ffa500, #dc8f03);
}
 
.deng-t {
	font-family: 华文行楷,Arial,Lucida Grande,Tahoma,sans-serif;
	font-size: 46rpx;
	color: #dc8f03;
	font-weight: bold;
	line-height: 85rpx;
	text-align: center;
}
 
.night .deng-t, 
.night .deng-box, 
.night .deng-box1 {
	background: transparent !important;
}
 
@keyframes swing {
	0% {
		transform: rotate(-10deg)
	}
 
	50% {
		transform: rotate(10deg)
	}
 
	100% {
		transform: rotate(-10deg)
	}
}
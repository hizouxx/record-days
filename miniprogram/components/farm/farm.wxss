}

.house-8:before {
  top: -.5rem;
  left: 0;
  width: 5rem;
  height: .5rem;
  background-color: #fff;
  border-radius: .1rem;
}

.house-8:after {
  bottom: 0;
  left: 0;
  width: 3.5rem;
  height: 2.2rem;
  background-color: #6a876e;
}

.house-9 {
  width: 6rem;
  height: 1rem;
  background-color: #6db835;
  border-radius: 2rem 0 0 0;
  bottom: 0;
  right: 0;
}

/*护栏*/
.fence {
  position: absolute;
  top: -2rem;
  right: 12rem;
  width: 5rem;
  height: 3rem;
}

.fence text {
  position: absolute;
}

.fence text:nth-child(1),
.fence text:nth-child(2) {
  left: 0;
  width: .5rem;
  height: 3rem;
  border-radius: .1rem .1rem 0 0;
  background-color: #d39651;
  box-shadow: -2px 0 0 #ab5e2b inset;
}

.fence text:nth-child(1):before,
.fence text:nth-child(2):before {
  width: .7rem;
  height: .2rem;
  bottom: -.2rem;
  left: -.1rem;
  background-color: #d0a989;
}

.fence text:nth-child(1):after,
.fence text:nth-child(2):after {
  top: 0;
  left: .15rem;
  width: 0;
  height: 0;
  border-left: .2rem solid transparent;
  border-right: 0rem solid transparent;
  border-bottom: .5rem solid #ab5e2b;
  transform: rotate(170deg);
  transform: rotate(170deg);
}

.fence text:nth-child(2):after {
  top: 1.5rem;
  left: .05rem;
  transform: rotate(-12deg);
  transform: rotate(-12deg);
}

.fence text:nth-child(2) {
  left: 3rem;
}

.fence text:nth-child(3),
.fence text:nth-child(4) {
  right: 0;
  bottom: .5rem;
  height: .5rem;
  width: 4.95rem;
  border-radius: .1rem 0 0 .1rem;
  box-shadow: 0 2px 0 #f6ccaa inset;
  background-color: #e7aa62;
}

.fence text:nth-child(3):before,
.fence text:nth-child(4):before,
.fence text:nth-child(3):after,
.fence text:nth-child(4):after {
  top: .125rem;
  left: .1rem;
  width: .25rem;
  height: .25rem;
  border-radius: .25rem;
  background-color: #ab5e2b;
}

.fence text:nth-child(3):after,
.fence text:nth-child(4):after {
  left: 3rem;
}

.fence text:nth-child(4) {
  bottom: 1.8rem;
}

/*动画*/
.infinite {
  animation-iteration-count: infinite;
}

@keyframes greenpulse {
  from {
    box-shadow: 0 0 18px #f1ff93;
  }

  50% {
    box-shadow: 0 0 36px rgba(205, 229, 41, .5);
  }

  to {
    box-shadow: 0 0 18px #f1ff93;
  }
}

@keyframes cloud {
  0% {
    left: -30%;
  }

  50% {
    left: 120%;
  }

  100% {
    left: -30%;
  }
}

@keyframes cloudx2 {
  0% {
    right: -30%;
  }

  50% {
    right: 130%;
  }

  100% {
    right: -30%;
  }
}

@keyframes cloudx3 {
  0% {
    left: -50%;
  }

  50% {
    left: 150%;
  }

  100% {
    left: -50%;
  }
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}


@keyframes sunlight-1 {
  0% {
    opacity: 0;
  }

  50% {
    opacity: .15;
  }

  100% {
    opacity: 0;
  }
}

@keyframes sunlight-2 {
  0% {
    opacity: 0;
  }

  50% {
    opacity: .1;
  }

  100% {
    opacity: 0;
  }
}

@keyframes sunlight-3 {
  0% {
    opacity: 0;
  }

  50% {
    opacity: .08;
  }

  100% {
    opacity: 0;
  }
}
